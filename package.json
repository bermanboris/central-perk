{
  "name": "central-perk",
  "version": "0.0.0-development",
  "description": "Coffee house REST API",
  "keywords": [
    "coffee house",
    "rest api"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Boris Berman <boris@berman.solutions>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bermanboris/central-perk.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "prelint": "npm run typecheck",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "gh-pages": "gh-pages -d docs",
    "build": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "start:prod": "node dist/lib/index.js",
    "typecheck": "tsc",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "presemantic-release": "npm run build",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.6",
    "@types/uuid": "^3.4.4",
    "babel-jest": "^24.7.1",
    "babel-plugin-jest-hoist": "^24.6.0",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-config": "^24.7.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "semantic-release": "^15.13.3",
    "semantic-release-cli": "^4.1.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "date-fns": "^1.30.1",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "node-fetch": "^2.3.0",
    "uuid": "^3.3.2"
  }
}
